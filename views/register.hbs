            <div class="col-md-3">
              <label for="pincode" class="form-label">Pincode</label>
              <input type="text" class="form-control" id="pincode" name="pincode" size="6" maxlength="6" placeholder="" required>
              <div class="invalid-feedback">
                Pincode code required.
              </div>
            </div>
          </div>

